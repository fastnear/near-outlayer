# HTTP Server
HOST=0.0.0.0
PORT=8080

# PostgreSQL
DATABASE_URL=postgres://postgres:postgres@localhost/offchainvm
DB_POOL_SIZE=50

# Redis
REDIS_URL=redis://localhost:6379
REDIS_TASK_QUEUE=offchainvm:tasks

# WASM Cache
WASM_CACHE_DIR=/var/offchainvm/wasm
WASM_CACHE_MAX_SIZE_GB=50
LRU_EVICTION_CHECK_INTERVAL_SECONDS=3600

# Authentication
REQUIRE_AUTH=true

# Timeouts
TASK_POLL_TIMEOUT_SECONDS=60
LOCK_DEFAULT_TTL_SECONDS=300

# Logging
RUST_LOG=offchainvm_coordinator=debug,tower_http=debug

# Keystore integration (optional)
# For Docker deployment on Mac/Windows, use: http://host.docker.internal:8081
# For Linux, use host IP: http://172.17.0.1:8081 or configure --add-host
# For local development (no Docker), use: http://localhost:8081
KEYSTORE_BASE_URL=http://localhost:8081

# NEAR configuration
NEAR_EXPLORER_URL=https://testnet.nearblocks.io
OFFCHAINVM_CONTRACT_ID=offchainvm.testnet
