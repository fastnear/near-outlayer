# Phala Cloud Environment Configuration
# Copy this to .env.phala and fill in your values

# Coordinator API
API_BASE_URL=https://your-coordinator-url.com
API_AUTH_TOKEN=your-worker-token-here

# NEAR Configuration
NEAR_RPC_URL=https://rpc.testnet.near.org
OFFCHAINVM_CONTRACT_ID=outlayer.testnet
OPERATOR_ACCOUNT_ID=worker.outlayer.testnet

# TEE Configuration (Phala Cloud)
USE_TEE_REGISTRATION=true
TEE_MODE=none
# Note: Set to 'tdx' when Intel TDX is available in Phala

# Registration Contract (for TEE mode)
REGISTER_CONTRACT_ID=register.outlayer.testnet
REGISTER_COLLATERAL_JSON={"amount":"1000000000000000000000000"}

# Init Account (pays gas for worker registration)
INIT_ACCOUNT_ID=init.outlayer.testnet
INIT_ACCOUNT_PRIVATE_KEY=ed25519:...

# Worker Capabilities (what this worker can do)
# TEE workers (Phala): Only execution (no Docker for compilation)
COMPILATION_ENABLED=false
EXECUTION_ENABLED=true

# Event Monitor (optional - set to true if you want this worker to monitor events)
ENABLE_EVENT_MONITOR=false

# Keystore (optional - for encrypted secrets)
KEYSTORE_BASE_URL=https://your-keystore-url.com
KEYSTORE_AUTH_TOKEN=your-keystore-token

# Logging
RUST_LOG=info
SAVE_SYSTEM_HIDDEN_LOGS_TO_DEBUG=true
PRINT_WASM_STDERR=false
