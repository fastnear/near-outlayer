# Local Development Environment Configuration
# This is for testing worker WITHOUT TEE registration (legacy mode)
#
# Usage:
#   ./scripts/run_worker_local.sh docker/.env.local-dev

# Coordinator API (use local or testnet)
API_BASE_URL=https://testnet-api.outlayer.fastnear.com
API_AUTH_TOKEN=T3GGO4UFIyKt0bDR4cykBEq4RC

# NEAR Configuration
NEAR_RPC_URL=https://rpc.testnet.fastnear.com
OFFCHAINVM_CONTRACT_ID=outlayer.testnet
OPERATOR_ACCOUNT_ID=worker.outlayer.testnet

# ⚠️ LEGACY MODE: No TEE registration (for local testing)
USE_TEE_REGISTRATION=false
TEE_MODE=none

# IMPORTANT: In legacy mode, OPERATOR_PRIVATE_KEY is REQUIRED
# This is the worker's private key (not init account!)
# Get it from: cat ~/.near-credentials/testnet/worker.outlayer.testnet.json
OPERATOR_PRIVATE_KEY=ed25519:YOUR_WORKER_PRIVATE_KEY_HERE

# Worker Capabilities
COMPILATION_ENABLED=true
EXECUTION_ENABLED=true

# Event Monitor (disabled for local dev)
ENABLE_EVENT_MONITOR=false

# Keystore (optional)
